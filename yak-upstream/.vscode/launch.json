{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CLI: create test.yak",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/yak.exe",
            "args": ["create", "test.yak"],
            "cwd": "${workspaceFolder}/temp",
            "preLaunchTask": "cargo-build-cli",
            "sourceFileMap": {
                "/rustc/*": "${env:USERPROFILE}/.rustup/toolchains/*/lib/rustlib/src/rust"
            }
        },
        {
            "name": "Debug: Rust Tests (yak)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/deps/yak-*.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo-test-build",
            "sourceFileMap": {
                "/rustc/*": "${env:USERPROFILE}/.rustup/toolchains/*/lib/rustlib/src/rust"
            }
        },
        {
            "name": "Python: All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v"
            ],
            "cwd": "${workspaceFolder}/yak_pytest",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/yak_pytest"
            }
        }
    ]
}
