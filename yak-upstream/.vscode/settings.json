{
    // Rust settings
    "rust-analyzer.cargo.features": "all",
    "rust-analyzer.check.command": "clippy",
    "rust-analyzer.cargo.allTargets": true,

    // Python settings
    "python.defaultInterpreterPath": "./yak_pytest/.venv/bin/python",
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests",
        "-v"
    ],
    "python.testing.cwd": "${workspaceFolder}/yak_pytest",

    // File associations
    "files.associations": {
        "*.yak": "plaintext"
    },

    // File exclusions (keep workspace clean)
    "files.exclude": {
        "**/.pytest_cache": true,
        "**/__pycache__": true,
        "**/target/debug/deps": true,
        "**/target/debug/build": true,
        "**/target/debug/incremental": true
    },

    // Search exclusions
    "search.exclude": {
        "**/target": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true
    },

    // Editor settings
    "editor.formatOnSave": true,
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnSave": true
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter"
    }
}
